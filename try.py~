import cv2
import numpy as np

g=cv2.imread('g.jpg')
gt=cv2.imread('gt.jpg')
a=np.zeros((256,256,3))
b=a+g

point_size = 11
sigma = 2
x_range = [i for i in range(point_size)]
y_range = [i for i in range(point_size)]
xx, yy = np.meshgrid(x_range, y_range)
d2 = (xx - (point_size-1)/2) ** 2 + (yy - (point_size-1)/2) ** 2
exponent = d2 / 2.0 / sigma / sigma
heatmap = np.exp(-exponent)
#heatmap = np.pad(heatmap,10,'constant')
heatmap_show = heatmap.astype(np.uint8)*255
#print(heatmap)
out=open('out.txt','w')
out.write(heatmap)
out.write(gt[


cv2.imshow('gt',gt)
cv2.imshow('g',g)
cv2.imshow('b',b)
cv2.imshow('heatmap',heatmap_show)
cv2.waitKey(0)

